#!/bin/bash
#
# This script helps you to manage the OpenLiteSpeed in Ubuntu Windows WSL.
# Author: Laszlo Kardos
# License: GNU/GPL v3 or newer
#
# Installation:
# sudo cp -R ols /usr/bin/ols
# sudo chmod +x /usr/bin/ols

start=start
stop=stop
restart=restart
status=status

echo server $1 executed..

if [ $1 == $start ]; then

     echo "Starting servers..."
     sudo /usr/local/lsws/bin/lswsctrl start
     echo "OpenLitespeed Server now running..."

elif [ $1 == $stop ]; then

     echo "Stopping servers...."
     sudo /usr/local/lsws/bin/lswsctrl stop
     echo "OpenLitespeed Server are now stopped..."

elif [ $1 == $restart ]; then

     echo "Restarting servers...."
     sudo /usr/local/lsws/bin/lswsctrl restart
     echo "OpenLitespeed Server now running..."

elif [ $1 == $status ]; then

    echo "Server status"
    sudo /usr/local/lsws/bin/lswsctrl stop

else
    echo "Please enter a command [start|restart|stop|status]"
fi
